{{> header}}
{{> navigation}}
<div class="content">
    <div class="chirper">

        <h2 class="titlebar">{{username}}</h2>

        <a id="btnFollow" class="chirp-author" href="{{href}}">{{option}}</a>

        <div id="userProfileStats" class="user-details">
            <span>{{chirpsCount}} chirps</span> | <span>{{following}} following</span> | <span>{{followers}} followers</span>
        </div>
    </div>
    <div id="profileChirps" class="chirps"><h2 class="titlebar">Chirps</h2>
        {{#each chirps}}
            {{> chirp}}
        {{else}}
            <div class="chirp"><span class="loading">No chirps in database</span></div>
        {{/each}}
    </div>
</div>
{{> footer}}