{{> header}}

<div class="content">
    {{#if loggedIn}}
        {{> menu}}
    {{/if}}
    <div class="post post-content">
        <h1>Your Posts</h1>
    </div>
    <div class="posts">
        {{#each posts}}
            {{> post}}
        {{else}}
            <p>No posts in database</p>
        {{/each}}
    </div>
</div>

{{> footer}}